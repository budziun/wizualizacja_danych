import pandas as pd
import matplotlib.pyplot as plt
import numpy as np

# Wczytanie pliku CSV
data = pd.read_csv('penguins.csv')

# Wykres słupkowy ilości pingwinów w zależności od wyspy
liczba_pingwinow_wyspa = data['island'].value_counts()
liczba_pingwinow_wyspa.plot(kind='bar')

# Ustawienie etykiet osi
plt.xlabel('Wyspa')
plt.ylabel('Ilość pingwinów')
plt.title('Ilość pingwinów na każdej wyspie')

# Wyświetlenie wykresu słupkowego
plt.show()

# Wykres punktowy zależności szerokości dzioba od długości
waga = data['body_mass_g']**3 / 2000
kolor = np.where(data['sex'] == 'Male', 'blue', 'red')
ksztalt = np.where(data['species'] == 'Adelie', 'o', np.where(data['species'] == 'Chinstrap', '^', 's'))

plt.scatter(data['bill_length_mm'], data['bill_depth_mm'], c=kolor, s=waga, marker=ksztalt, alpha=0.6)

# Ustawienie etykiet osi
plt.xlabel('Długość dzioba (mm)')
plt.ylabel('Szerokość dzioba (mm)')
plt.title('Zależność szerokości dzioba od długości')

# Wyświetlenie wykresu punktowego
plt.show()

